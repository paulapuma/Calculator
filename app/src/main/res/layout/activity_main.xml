<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonsin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="sin"
            android:text="sin" />

        <Button
            android:id="@+id/buttoncos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:onClick="cos"
            android:text="cos" />

        <Button
            android:id="@+id/buttontan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="tan"
            android:text="tan" />

        <Button
            android:id="@+id/buttonabrepar"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:onClick="abreparentesis"
            android:text="(" />

        <Button
            android:id="@+id/buttoncierrapar"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:onClick="cierraparentesis"
            android:text=")" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="numero7"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:onClick="numero8"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="numero9"
            android:text="9" />

        <Button
            android:id="@+id/buttonmas"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="suma"
            android:text="+" />

        <Button
            android:id="@+id/buttondegrees"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:onClick="degrees"
            android:text="Deg(ยบ)" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="numero4"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:onClick="numero5"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="numero6"
            android:text="6" />

        <Button
            android:id="@+id/buttonmenos"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="resta"
            android:text="-" />

        <Button
            android:id="@+id/buttonradians"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:onClick="radians"
            android:text="Rad" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="numero1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:onClick="numero2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="numero3"
            android:text="3" />

        <Button
            android:id="@+id/buttonpor"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="multiplicacion"
            android:text="*"/>

        <Button
            android:id="@+id/buttonborrar"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:onClick="clear"
            android:text="C" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/buttonigual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="igual"
            android:text="=" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:onClick="numero0"
            android:text="0" />

        <Button
            android:id="@+id/buttoncoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:onClick="coma"
            android:text="." />

        <Button
            android:id="@+id/buttonentre"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:onClick="division"
            android:text="/" />


    </TableRow>

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="55sp" />
    android:layout_column="4"


</TableLayout>